<?xml version="1.0"?>
<tryton>
    <data>
        <record model="ir.ui.view" id="invoice_form">
            <field name="model">account.invoice</field>
            <field name="inherit" ref="account_invoice.invoice_view_form"/>
            <field name="name">invoice_form</field>
        </record>
           <record model="ir.ui.view" id="invoice_incoterm_view_form">
            <field name="model">account.invoice.incoterm</field>
            <field name="type">form</field>
            <field name="name">invoice_incoterm_form</field>
        </record>
        <record model="ir.ui.view" id="invoice_incoterm_view_tree">
            <field name="model">account.invoice.incoterm</field>
            <field name="type">tree</field>
            <field name="name">invoice_incoterm_tree</field>
        </record>
        <record model="ir.action.act_window" id="act_invoice_incoterm_form">
            <field name="name">Invoice Incoterm</field>
            <field name="res_model">account.invoice.incoterm</field>
        </record>
           <record model="ir.action.act_window.view" id="act_invoice_incoterm_form_view1">
            <field name="sequence" eval="10"/>
            <field name="view" ref="invoice_incoterm_view_tree"/>
            <field name="act_window" ref="act_invoice_incoterm_form"/>
        </record>
          <record model="ir.action.act_window.view" id="act_invoice_incoterm_form_view2">
            <field name="sequence" eval="20"/>
            <field name="view" ref="invoice_incoterm_view_form"/>
            <field name="act_window" ref="act_invoice_incoterm_form"/>
        </record>

         <menuitem name='Invoice Incoterm' parent="account.menu_account_configuration" action="act_invoice_incoterm_form"
            id="menu_invoice_incoterm_form" sequence="1"/>   
    </data>
</tryton>
